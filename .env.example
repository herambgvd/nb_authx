# AuthX Environment Configuration
# Copy this file to .env and update the values

# Application Settings
APP_NAME=AuthX
APP_VERSION=0.1.0
DEBUG=true

# Database Configuration
# Async PostgreSQL URL for application use
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/authx_db

# Sync PostgreSQL URL for Alembic migrations
DATABASE_URL_SYNC=postgresql://username:password@localhost:5432/authx_db

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
RESET_PASSWORD_TOKEN_EXPIRE_MINUTES=15

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
EMAIL_FROM=noreply@authx.com

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging
LOG_LEVEL=INFO
