# AuthX Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
PROJECT_NAME=AuthX
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-minimum-32-characters
API_V1_PREFIX=/api/v1

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/authx_db
ALEMBIC_DATABASE_URL=postgresql://username:password@localhost:5432/authx_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration (Gmail for Development)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-gmail@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
SMTP_USE_SSL=false
EMAIL_FROM=your-gmail@gmail.com
EMAIL_FROM_NAME=AuthX System

# Production Email Services (Uncomment for production)
# SMTP_SERVER=email-smtp.us-west-2.amazonaws.com  # AWS SES
# SMTP_PORT=587
# SMTP_USERNAME=your-ses-username
# SMTP_PASSWORD=your-ses-password

# Mailgun Alternative
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-domain.com
# MAILGUN_BASE_URL=https://api.mailgun.net/v3

# SendGrid Alternative
# SENDGRID_API_KEY=your-sendgrid-api-key

# Google Maps Integration
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Super Admin Configuration
SUPER_ADMIN_EMAIL=admin@yourdomain.com
SUPER_ADMIN_PASSWORD=ChangeThisSecurePassword123!

# Security Settings
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Monitoring
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO

# Microservice Settings
SERVICE_NAME=authx
SERVICE_VERSION=1.0.0
API_GATEWAY_URL=http://localhost:8000
