# AuthX Microservice Environment Variables

# Application Settings
APP_NAME=AuthX
VERSION=0.1.0
ENVIRONMENT=development  # development, staging, production
DEBUG=true
SECRET_KEY=your-secret-key-here  # Used for JWT signing
LOG_LEVEL=info  # debug, info, warning, error, critical

# API Settings
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000  # CORS allowed origins
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256  # JWT signing algorithm

# Database Settings
DATABASE_URI=postgresql://postgres:postgres@localhost:5432/authx
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Leave empty if no password
REDIS_CACHE_EXPIRATION=3600  # Default cache expiration in seconds

# Email Settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@yourcompany.com
SMTP_FROM_NAME=AuthX Security

# Security Settings
PASSWORD_HASH_ALGORITHM=bcrypt
MIN_PASSWORD_LENGTH=8
BRUTE_FORCE_MAX_ATTEMPTS=5
BRUTE_FORCE_WINDOW_MINUTES=15
MFA_ENABLED=true
DEFAULT_MFA_TYPE=totp  # totp, sms, email

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=60/minute  # Default rate limit
RATE_LIMIT_AUTH=10/minute  # Authentication endpoints rate limit

# Metrics and Monitoring
METRICS_ENABLED=true
METRICS_ENDPOINT_ENABLED=true
PROMETHEUS_MULTIPROC_DIR=/tmp

# File Storage (for exports, reports, etc.)
STORAGE_TYPE=local  # local, s3
STORAGE_LOCAL_PATH=./storage
# S3 settings (if using S3)
S3_BUCKET=authx-storage
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1

# AI Integration Settings (for future use)
AI_ENABLED=false
AI_SERVICE_URL=http://localhost:5000/api
AI_API_KEY=your-ai-api-key

# External Services
GEOLOCATION_API_URL=https://ipgeolocation.example.com/api
GEOLOCATION_API_KEY=your-geolocation-api-key

# Super Admin Initial Setup
INITIAL_SUPERADMIN_EMAIL=admin@example.com
INITIAL_SUPERADMIN_PASSWORD=change-me-immediately
