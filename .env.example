# AuthX Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
PROJECT_NAME=AuthX
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production-make-it-very-long-and-random

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/authx_db
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_ENABLED=true

# Email/SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
EMAIL_FROM=noreply@authx.com
EMAIL_FROM_NAME=AuthX

# Google APIs Configuration
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
GOOGLE_PLACES_API_KEY=your-google-places-api-key
GOOGLE_GEOCODING_API_KEY=your-google-geocoding-api-key

# Super Admin Configuration
SUPER_ADMIN_EMAIL=admin@authx.com
SUPER_ADMIN_PASSWORD=SuperSecurePassword123!

# Monitoring & Logging
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
LOG_LEVEL=INFO

# Security Settings
BRUTE_FORCE_PROTECTION=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Organization Settings
ORGANIZATION_APPROVAL_REQUIRED=true
DEFAULT_ORGANIZATION_TIER=free

# CORS Settings (adjust for production)
ALLOWED_HOSTS=["*"]
